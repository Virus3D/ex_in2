<div {{ attributes }}>
    {% set category = this.getCategory()%}
    <div class="col mb-3">
        <div class="card">
            <div class="card-header">
                <div class="row row-cols-4">
                    <div class="col">
                        <button id="category_render_{{ category.id }}" class="btn btn-sm btn-outline-primary" data-action="live#$render">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                                <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41m-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9"/>
                                <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5 5 0 0 0 8 3M3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9z"/>
                            </svg>
                        </button>
                        {{ category.name}}
                    </div>
                    <div class="col text-end text-success">{{ category.totalReceipt|formatCurrency }}</div>
                    <div class="col text-end text-danger">{{ category.totalSpend|formatCurrency }}</div>
                    <div class="col text-end text-primary">{{ category.balance|formatCurrency }}</div>
                    <div class="col text-end"></div>
                </div>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for card in category.cards %}
                    <li class="list-group-item{% if card.type == 1 %} list-group-item-danger{% endif %}">
                        <div class="row row-cols-4">
                            <div class="col">{{ card.name }}</div>
                            <div class="col text-end text-success">{{ card.totalReceipt|formatCurrency }}</div>
                            <div class="col text-end text-danger">{{ card.totalSpend|formatCurrency }}</div>
                            <div class="col text-end">{{ card.balance|formatCurrency }}</div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
