{% set _style = 'danger' %}
<div class="card" {{ attributes }} data-loading="addClass(opacity-50) addAttribute(disabled)">
    {% set spendList = this.getSpendList() %}
    <div class="card-header border-{{ _style }}">
        <div class="row row-cols-4">
            <div class="col">
                <h5 class="card-title text-{{ _style }}">{{ 'Spend'|trans }}</h5>
            </div>
            <div class="col">
                {{ component('CardSelect', {selectedCardId: selectedCard.id ?? null, field: field}) }}
            </div>
            <div class="col text-end text-{{ _style }}">
                {{ this.total|formatCurrency }}
            </div>
            <div class="col text-end">
                <button class="btn btn-outline-{{ _style }}" type="button" data-action="live#$render">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16"><path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/><path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/></svg>
                </button>
            </div>
        </div>
    </div>
    <div class="card-body scroll-{{ _style }}" id="spend_block">
    {% if spendList is empty %}
        <p>{{ 'No spends found.'|trans }}</p>
    {% else %}
        <ul class="list-group list-group-flush">
            {% for spend in spendList %}
            <li class="list-group-item">
                <div class="row">
                    <div class="col">{{ spend.date|date('Y-m-d') }}</div>
                    <div class="col">
                        {{ spend.card.name }}
                        <sub class="text-info">{{ spend.card.category.name }}</sub>
                    </div>
                    <div class="col">{{ spend.comment }}</div>
                    <div class="col text-end">{{ spend.balance|formatCurrency }}</div>
                    <div class="col-auto text-center">
                        <button
                            class="btn btn-sm btn-outline-danger"
                            data-action="live#action"
                            data-live-action-param="remove"
                            data-live-id-param="{{ spend.id }}"
                            type="button"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </li>
            {% endfor %}
        </ul>
    {% endif %}
    </div>
</div>
